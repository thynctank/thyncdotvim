# Global snippets

# (c) holds no legal value ;)
snippet c)
	Copyright `&enc[:2] == "utf" ? "Â©" : "(c)"` `strftime("%Y")` ${1:`g:snips_author`}. All Rights Reserved.${2}
snippet date
	`strftime("%Y-%m-%d")`
snippet ddate
	`strftime("%B %d, %Y")`
snippet action
	<input type="button" class="action" value="${1}"/>${2}
snippet actionsub
	<input type="submit" class="action" value="${1}"/>${2}
snippet fieldnlabel
	<div class="fieldAndLabel">
		<label for="${1:fieldId}">${2}</label>
		<input id="${1}" name="${1}"/>
		<div class="clear"></div>
	</div>
	${3}
snippet require
	require([${1}], function(${2}) {
		${3}
	});
	${4}
snippet define
	define([${1}], function(${2}) {
		${3}
	});
	${4}
snippet haml
	!!!
	%html
		%head
			${1}
		%body
			${2}
snippet pry
	binding.pry
snippet deb
	debugger
